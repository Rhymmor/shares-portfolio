{% set css %}
  {% include "base.css" %}
{% endset %}
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>

  <style>
    {{ css | cssmin | safe }}
  </style>
</head>
<body class="body">
  <div class="content">
    <header>
      <h1>{{ title }}</h1>
    </header>
    <main>
      {{ content | safe }}
    </main>
  </div>
</body>
</html>